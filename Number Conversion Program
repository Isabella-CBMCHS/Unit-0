#decimal -> binary using "recursion" (research tht)

def DecimalToBinary(num):

    if num >= 1:
        DecimalToBinary(num // 2)
    print(num % 2, end = '')

#"Driver" code -- rsrch
if __name__ =='__main__':

    #decimal value
    dec_val = 24

    #calling function
    DecimalToBinary(dec_val)


